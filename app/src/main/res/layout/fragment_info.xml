<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPlant"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/flor" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textViewCommonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Comun"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Cientifico:"
            android:textAlignment="center"
            android:textColor="#B8B8B8"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/textViewScientificName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Cientifico"
            android:textAlignment="center"
            android:textColor="#ECECEC"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Familia:"
            android:textAlignment="center"
            android:textColor="#B8B8B8"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textViewFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Familia"
            android:textAlignment="center"
            android:textColor="#EDEDED"
            android:textSize="20dp"/>

    </LinearLayout>

</FrameLayout>